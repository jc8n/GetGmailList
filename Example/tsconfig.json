{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es6",
      "lib": [
          "dom",
          "es6"
      ],
      "removeComments": true,
      "noImplicitAny": false,
      "inlineSourceMap": true,
      "noEmitOnError": false,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "declaration": false,
      "baseUrl": ".",
    },
    "exclude": [
      "node_modules"
    ]
}
  